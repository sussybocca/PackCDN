{
  "rewrites": [
    // Wildcard redirect for ALL random URLs - must be FIRST
    {
      "source": "/((?!api|_next|static|.*\\..*).*)",
      "destination": "/api/wildcard-redirect"
    },
    // Your original routes
    {
      "source": "/",
      "destination": "/selector.html"
    },
    {
      "source": "/home",
      "destination": "/home/index.html"
    },
    {
      "source": "/docs",
      "destination": "/docs.html"
    },
    {
      "source": "/editor",
      "destination": "/editor.html"
    },
    {
      "source": "/explore",
      "destination": "/explore.html"
    },
    {
      "source": "/config.json",
      "destination": "/config.json"
    }
  ],
  "redirects": [
    {
      "source": "/portal",
      "destination": "/",
      "permanent": false
    },
    {
      "source": "/gateway",
      "destination": "/home",
      "permanent": false
    },
    {
      "source": "/library",
      "destination": "/docs",
      "permanent": false
    },
    {
      "source": "/workshop",
      "destination": "/editor",
      "permanent": false
    },
    {
      "source": "/discover",
      "destination": "/explore",
      "permanent": false
    },
    {
      "source": "/settings",
      "destination": "/config.json",
      "permanent": false
    },
    // Fun random redirects that will work with the wildcard handler
    {
      "source": "/quantum-portal",
      "destination": "/api/wildcard-redirect",
      "permanent": false
    },
    {
      "source": "/neo-gateway",
      "destination": "/api/wildcard-redirect",
      "permanent": false
    },
    {
      "source": "/cosmic-library",
      "destination": "/api/wildcard-redirect",
      "permanent": false
    },
    {
      "source": "/digital-workshop",
      "destination": "/api/wildcard-redirect",
      "permanent": false
    },
    {
      "source": "/virtual-explorer",
      "destination": "/api/wildcard-redirect",
      "permanent": false
    },
    {
      "source": "/synth-settings",
      "destination": "/api/wildcard-redirect",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/config.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    },
    {
      "source": "/*.json",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ],
  "cleanUrls": false,
  "trailingSlash": false
}
